<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.challenge.DayFragment"
    android:background="@color/green">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.078"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/descriptionholder"
                android:layout_width="315dp"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"

                android:fontFamily="@font/antic_didone"
                android:text=""
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.47"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageholder"
                app:layout_constraintVertical_bias="0.281" />

            <TextView
                android:id="@+id/description2holder"
                android:layout_width="314dp"
                android:layout_height="294dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"

                android:fontFamily="@font/antic_didone"
                android:text=""
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/btnGo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/descriptionholder"
                app:layout_constraintVertical_bias="0.421" />

            <Button
                android:id="@+id/btnGo"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/antic_didone"
                android:text="Go to workout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageholder"
                app:layout_constraintVertical_bias="0.944"
                android:background="@drawable/custom_btn"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"/>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>

